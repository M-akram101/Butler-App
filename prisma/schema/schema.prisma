/// @import "./enums.prisma"


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


/* ===== ENUMS (must be here) ===== */


enum Role {
    ADMIN
    CONTRIBUTOR
}

enum Industry {
    TECHNOLOGY
    HEALTHCARE
    FINANCE
    EDUCATION
    BUSINESS
    SALES_MARKETING
    MANUFACTURING
    CONSTRUCTION
    REAL_ESTATE
    ENERGY
    AGRICULTURE
    FOOD_BEVERAGE
    TRANSPORTATION
    LOGISTICS
    RETAIL
    ECOMMERCE
    MEDIA
    ENTERTAINMENT
    TELECOMMUNICATIONS
    GOVERNMENT
    PUBLIC_SECTOR
    LEGAL
    SECURITY
    HOSPITALITY
    TRAVEL
    TOURISM
    SPORTS
    FITNESS
    NON_PROFIT
    SOCIAL_SERVICES
    SCIENCE
    ENVIRONMENT
    CONSULTING
    PROFESSIONAL_SERVICES
    DESIGN
    CREATIVE
    HUMAN_RESOURCES
    RECRUITMENT
    FREELANCE
    SELF_EMPLOYED
    OTHER
}

enum Gender {
    MALE
    FEMALE
}

enum MaritalStatus {
    SINGLE
    MARRIED
    DIVORCED
    SEPERATED
    WIDOWED
    PREFER_NOT_TO_SAY
}

/* ===== MODELS ===== */



model User {
  id            String        @id @default(uuid())
  firstName     String        @map("first_name") @db.VarChar(50)
  lastName      String        @map("last_name") @db.VarChar(50)
  password      String        @db.VarChar(100)
  role          Role          
  address       String        @db.VarChar(100)
  email         String        @unique
  phoneNumber   String        @unique
  industry      Industry
  jobTitle      String        @map("job_title") @db.VarChar(50)
  maritalStatus MaritalStatus @map("marital_status")
  dateOfBirth   DateTime      @map("date_of_birth")
  gender        Gender
  isApproved    Boolean       @default(false)
  isActive      Boolean       @default(false)
  isDeleted     Boolean       @default(false)
  createdAt     DateTime      @default(now())
  passwordChangedAt DateTime?  
  // accountId
}
