/// @import "./enums.prisma"


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


/* ===== MODELS ===== */

model User {
  id            String        @id @default(uuid())
  firstName     String        @map("first_name") @db.VarChar(50)
  lastName      String        @map("last_name") @db.VarChar(50)
  password      String        @db.VarChar(100)
  role          Role          
  address       String        @db.VarChar(100)
  email         String        @unique
  phoneNumber   String        @unique @map("phone_number")
  industry      Industry
  jobTitle      String        @map("job_title") @db.VarChar(50)
  maritalStatus MaritalStatus @map("marital_status")
  dateOfBirth   DateTime      @map("date_of_birth")
  gender        Gender
  isApproved    Boolean       @default(false)  @map("is_approved")
  isActive      Boolean       @default(false)  @map("is_active")
  isDeleted     Boolean       @default(false)  @map("is_deleted")
  createdAt     DateTime      @default(now())  @map("created_at")
  passwordChangedAt DateTime?   @map("password_changed_at")
  accounts Account[] @relation("UserAccounts")  // accountId
}

model Account {
  id            String        @id @default(uuid())
  name String @db.VarChar(50)
  type AccountType @default(HOME)
  address String @db.VarChar(100)
  capAmount Int @map("cap_amount")
  createdAt DateTime @default(now()) @map("created_at")
  isDeleted     Boolean       @default(false)
  user User @relation("UserAccounts",fields: [userId], references:[id])
  userId String @map("user_id")

}
